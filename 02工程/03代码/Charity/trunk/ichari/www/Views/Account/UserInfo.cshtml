@model Ichari.Model.UserAdditionalInfo
@section Head{
    <link type="text/css" rel="stylesheet" href="@(Ichari.Common.WebUtils.GetAppSettingValue(Ichari.Web.StaticKey.StaticServer))/Content/css/part_a.css" />
}
@{
    ViewBag.Title = "用户资料";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="clears main">
        <!-- 注册成功开始 -->
        <div id="step3" class="mainbox">
            <h3 class="guide">
                为了您的帐户安全，请如实填写以下资料，或 @Html.ActionLink("以后再填", "Summary")。
            </h3>
            @*<div class="crumbs">
                <span>
                    <span class="current"></span>
                </span>
            </div>*@
            <div class="clears"></div>
            <p class="congra">
                <img src="@(Ichari.Common.WebUtils.GetAppSettingValue(Ichari.Web.StaticKey.StaticServer))/Content/images/hi.jpg" alt="Hi" />Hi, <span class="red">@Model.UserName</span>
            </p>
            <fieldset class="login reg">
                <p>@Html.ValidationSummary(true)</p>
                <p>
                    <label><span style="color:Red;">*</span>姓名：</label>
                    <span class="error_box">
                        @Html.TextBoxFor(m => m.TrueName, new { name = "tname", @class = "inp_normal" })
                        @Html.ValidationMessageFor(m => m.TrueName, "", new { @class = "icon_error" })
                    </span>
                    <span>领奖和提款的重要依据！姓名填写后不可修改</span>
                </p>
                <p>
                    <label><span style="color:Red;">*</span>身份证：</label>
                    <span class="error_box">
                        @Html.TextBoxFor(m => m.IdentityCardNo, new { name = "idc", @class = "inp_normal" })
                        @Html.ValidationMessageFor(m => m.IdentityCardNo, "", new { @class = "icon_error" })
                    </span>
                    <span>领奖人身份证号码，必须与姓名一致</span>
                </p>
                <p>
                    <label>电话：</label>
                    <span class="error_box">
                        @Html.TextBoxFor(m => m.Phone, new { name = "phone", @class = "inp_normal" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "icon_error" })
                    </span>
                    <span></span>
                </p>
                <p>
                    <input type="submit" class="btn_big" value="保存信息" />   或者   @Html.ActionLink("以后再填", "Summary")
                </p>
            </fieldset>
        </div>
        <!-- 注册成功结束 -->
        
    </div>
}

@section Support{
<script type="text/javascript" src="/home/support"></script>
}
