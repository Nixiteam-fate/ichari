@model Ichari.Model.UserChangePassword

@{
    ViewBag.Title = "ChangePassword";
    ViewBag.SupportNumer = "010-85999355";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <!-- 验证开始 -->
    <div class="wrapper">
    <div class="mainbox">
        <h3 class="guide">
            更改密码
        </h3>
        
        <fieldset class="login" style="border:0px none White;padding :10px 10px 10px 20px;">
            <p>
                <label>请输入原密码：</label>
                <span class="error_box">
                    @Html.PasswordFor(m => m.CurrentPwd, new { @class = "inp_normal", title = "请输入原密码" })
                    @Html.ValidationMessageFor(m => m.CurrentPwd, "", new { @class = "icon_error" })
                </span>
            </p>
            <p>
                <label>请输入新密码：</label>
                <span class="error_box">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "inp_normal", title = "6-16个字符，建议使用字母、数字组合，混合大小写" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "icon_error" })
                </span>
                <span>&nbsp;6-16个字符</span>
                
            </p>
            <p>
                <label>密码确认：</label>
                <span class="error_box">
                    @Html.PasswordFor(m => m.ConfirmNewPwd, new { @class = "inp_normal", title = "请再次输入密码" })
                    @Html.ValidationMessageFor(m => m.ConfirmNewPwd, "", new { @class = "icon_error" })
                </span>
                <span>&nbsp;请再次输入密码</span>
            </p>
            <p>
                <input type="submit" class="btn_big" value="确认并保存" />
            </p>
        </fieldset>
    </div>
    </div>
}
