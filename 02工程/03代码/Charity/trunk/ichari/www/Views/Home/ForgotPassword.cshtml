@model Ichari.Model.UserNameEmail
@section Head{
    <link type="text/css" rel="stylesheet" href="@(Ichari.Common.WebUtils.GetAppSettingValue(Ichari.Web.StaticKey.StaticServer))/Content/css/part_a.css" />
}

@{
    ViewBag.Title = "忘记密码";
    ViewBag.SupportNumber = "010-85999355";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="clears main">
        <!-- 验证开始 -->
        <div class="mainbox">
            <h3 class="guide">
                请输入用户名与验证邮箱或咨询:<span style="color:Red;margin-left:30px;">@ViewBag.SupportNumber</span>
            </h3>
            <fieldset class="login reg">
                <p>
                    <label>用户名：</label>
                    <span class="error_box">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "inp_normal", title = "请输入用户名" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "icon_error" })
                    </span>
                    <span>请输入用户名</span>
                </p>
                <p>
                    <label>邮箱地址：</label>
                    <span class="error_box">
                        @Html.TextBoxFor(m => m.Email, new { @class = "inp_normal", title = "请输入邮箱地址" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "icon_error" })
                    </span>
                    <span>请输入邮箱地址</span>
                </p>
                <p>
                    <input type="submit" class="btn_big" value="发送验证密码" />
                </p>
                <div style="color:Red;margin-left:100px;margin-top:20px;height:20px;">@Html.ValidationSummary(true)</div>
            </fieldset>
        </div>
        <!-- 验证结束 -->
        
    </div>
}

@section Support{
<script type="text/javascript" src="/home/support"></script>
}