            @Html.ValidationMessageFor(model => model.TrueName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.IdentityCardNo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IdentityCardNo)
            @Html.ValidationMessageFor(model => model.IdentityCardNo)
        </div>
